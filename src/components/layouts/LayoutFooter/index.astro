---
import { APP_CONFIG } from '@@/config'

const feedUrl = APP_CONFIG.URL.FEED
---

<footer class="footer">
  <div class="inner">
    <ul class="menu">
      <li class="menu-item">
        <a href="/about">About</a>
      </li>
      <li class="menu-item">
        <a href="/about#contact">Contact</a>
      </li>
      <li class="menu-item">
        <a href={feedUrl}>Feed</a>
      </li>
    </ul>

    <p class="copyright">&copy; 2025 kimulaco.</p>
  </div>
</footer>

<style lang="scss">
  @use '@/assets/scss/mixins' as mixins;

  .footer {
    padding: 16px 0 24px;
    margin: 0;

    @include mixins.media() {
      margin: 30px 0 0;
    }
  }

  .inner {
    @include mixins.reset-child-margin();

    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
    min-width: var(--app-content-min-width);
    max-width: var(--app-content-max-width);
    margin: 0 auto;

    @include mixins.media() {
      padding: 0 20px;
    }
  }

  .menu {
    margin: 0;
    padding: 0;
    display: flex;
    list-style: none;
  }

  .menu-item {
    margin: 0 0 0 16px;

    a {
      transition: 0.3s;

      @include mixins.active() {
        opacity: 0.8;
      }
    }
  }

  .copyright {
    margin: 0;
    text-align: center;
    font-size: 14px;

    @include mixins.media() {
      text-align: left;
    }
  }
</style>
