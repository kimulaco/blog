---
import LayoutInner from '@/components/layouts/LayoutInner/index.vue'

const hasSub = !!Astro.slots.sub
---

<div class="column" class:list={[...(hasSub ? ['multi'] : ['single'])]}>
  <LayoutInner class="inner">
    <div class="main">
      <slot name="main" />
    </div>

    {
      hasSub && (
        <div class="sub">
          <slot name="sub" />
        </div>
      )
    }
  </LayoutInner>
</div>

<style lang="scss">
  @use '@/assets/scss/mixins' as mixins;

  .inner {
    padding: 32px 10px;

    @include mixins.media() {
      display: flex;
      align-items: flex-start;
      padding: 32px 20px;
    }
  }

  .main {
    width: 100%;

    @include mixins.media() {
      width: var(--app-main-width);

      .single & {
        width: 100%;
      }
    }
  }

  .sub {
    @include mixins.media() {
      width: calc(var(--app-aside-width) - 20px);
      margin-left: 20px;
    }
  }
</style>
