---
import { createOGPMeta, type OGPMeta } from '@/core/domains/ogp'

type Props = {
  title: string
  description: string
  url: string
  imagePath?: string
}

const { title, description, url, imagePath } = Astro.props
const metas = createOGPMeta({ title, description, url, imagePath })
---

{
  metas.map((meta: OGPMeta) => {
    return (
      <meta name={meta.name} property={meta.property} content={meta.content} />
    )
  })
}
