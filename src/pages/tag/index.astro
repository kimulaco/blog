---
import MultiColumnLayout from '@/layouts/MultiColumnLayout.astro'
import PageTitle from '@/components/modules/PageTitle/index.vue'
import ArticleTagList from '@/components/modules/ArticleTagList/index.vue'
import JsonldBreadcrumbList from '@/components/jsonld/JsonldBreadcrumbList.astro'
import { createBreadcrumbList } from '@/core/domains/breadcrumb'
import { getUsedAllTags } from '@/core/domains/article'

const tags = await getUsedAllTags()

const breadcrumbs = createBreadcrumbList([{ text: 'タグ一覧', url: '/tag' }])
---

<MultiColumnLayout title="タグ一覧 - @kimulaco/blog" currentPath="/tag">
  <JsonldBreadcrumbList breadcrumbs={breadcrumbs} slot="head" />

  <div class="PageTag">
    <PageTitle>タグ一覧</PageTitle>
    <ArticleTagList tags={tags} />
  </div>
</MultiColumnLayout>
