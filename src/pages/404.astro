---
import SingleColumnLayout from '@/layouts/SingleColumnLayout/index.astro'
import PageTitle from '@/components/modules/PageTitle/index.astro'
import AppLinkButton from '@/components/modules/AppLinkButton/index.astro'
import { APP_CONFIG } from '@@/config/app'
---

<SingleColumnLayout
  title="404 - @kimulaco/blog"
  description={APP_CONFIG.META.DESCRIPTION}
  currentPath="/404"
>
  <PageTitle>ページが見つかりませんでした。</PageTitle>
  <p class="mb-32">記事が削除、またはURLが変更されている可能性があります。</p>
  <AppLinkButton href="/">トップページへ</AppLinkButton>
</SingleColumnLayout>
