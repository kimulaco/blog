{
  "name": "kimulaco-blog",
  "type": "module",
  "private": true,
  "version": "2.2.0",
  "engines": {
    "bun": "1.1.38"
  },
  "scripts": {
    "prepare": "husky",
    "start": "astro dev",
    "dev": "BUILD_ENV=development astro dev",
    "dev:draft": "BUILD_ENV=development DRAFT=true astro dev",
    "build": "astro check --minimumSeverity error && astro build",
    "build:dev": "BUILD_ENV=development bun run build",
    "build:prod": "BUILD_ENV=production bun run build",
    "preview": "astro preview",
    "test:unit": "vitest run",
    "test:e2e": "playwright install --with-deps && playwright test",
    "lint:astro": "astro check",
    "lint:format": "prettier --check '**/*.{js,ts,astro,json,md}'",
    "lint:script": "eslint .",
    "lint:style": "stylelint './src/**/*.{css,scss,astro}' --ignore-path .gitignore"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/partytown": "2.1.4",
    "@astrojs/rss": "4.0.11",
    "@astrojs/sitemap": "3.2.1",
    "@astrojs/vue": "5.0.7",
    "@sentry/astro": "8.55.0",
    "astro": "5.4.2",
    "date-fns": "4.1.0",
    "date-fns-tz": "3.2.0",
    "normalize.css": "8.0.1",
    "vue": "3.5.13"
  },
  "devDependencies": {
    "@eslint/js": "9.16.0",
    "@playwright/test": "1.51.0",
    "@types/jsdom": "21.1.7",
    "@types/prismjs": "1.26.5",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@typescript-eslint/parser": "8.18.2",
    "@vitejs/plugin-vue": "5.2.1",
    "@vitest/coverage-v8": "2.1.9",
    "@vue/test-utils": "2.4.6",
    "dotenv": "16.4.7",
    "eslint": "9.16.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-astro": "1.3.1",
    "globals": "15.15.0",
    "husky": "9.1.7",
    "jsdom": "25.0.1",
    "marked": "15.0.7",
    "microcms-js-sdk": "3.1.2",
    "postcss-html": "1.8.0",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prismjs": "1.30.0",
    "sass": "1.85.1",
    "stylelint": "16.14.1",
    "stylelint-config-html": "1.1.0",
    "stylelint-config-standard-scss": "14.0.0",
    "stylelint-prettier": "5.0.3",
    "stylelint-scss": "6.11.1",
    "typescript": "5.7.3",
    "vite-svg-loader": "5.1.0",
    "vitest": "2.1.9",
    "zx": "8.3.2"
  }
}
